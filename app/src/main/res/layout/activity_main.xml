<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="239dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/app_title_header"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/numbersGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="308dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topButtonsPanel"
        android:layout_marginStart="15dp"
        >
        <!-- Números del 1 al 9 -->
        <Button
            android:id="@+id/btnNumber7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:backgroundTint="@null"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnNumber0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="30sp" />
        <!-- Botón vacío para simetría -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <!-- Cero en el centro -->
        <!-- Otro espacio vacío -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="443dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/numbersGrid"
        app:layout_constraintStart_toEndOf="@+id/numbersGrid"
        app:layout_constraintTop_toTopOf="@+id/topButtonsPanel"
        app:layout_constraintVertical_bias="0.666"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/division_op_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_button"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multiplication_op_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_button"
            android:text="X"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/minus_op_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_button"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plus_op_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_button"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/get_result_op_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/equal_rounded_button"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topButtonsPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/numbersGrid"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/numbersGrid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/clear_display_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/erase_operator_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="DEL"
            android:textSize="30sp" />

        <!--
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"
            android:text="3"
            android:textSize="30sp" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@color/light_gray"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/displayTextContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toStartOf="@+id/topButtonsPanel"
        android:text="0"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp" />-->



</androidx.constraintlayout.widget.ConstraintLayout>